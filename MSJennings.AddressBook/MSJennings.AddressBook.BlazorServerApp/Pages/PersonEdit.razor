@page "/PersonEdit"
@page "/PersonEdit/{Id}"
@inherits PersonEditBase

<h1 class="page-title">Edit Person</h1>

<EditForm Model="@Person" OnValidSubmit="HandleValidSubmit">
    <div class="form-group row">
        <label for="Id" class="col-2">ID</label>
        <label id="Id" class="col-10 form-control-plaintext">@Id</label>
    </div>

    <div class="form-group row">
        <label for="FirstName" class="col-2">First Name</label>
        <InputText id="FirstName" class="form-control col-10" placeholder="First Name" @bind-Value="@Person.FirstName"></InputText>
    </div>

    <div class="form-group row">
        <label for="LastName" class="col-2">Last Name</label>
        <InputText id="LastName" class="form-control col-10" placeholder="Last Name" @bind-Value="@Person.LastName"></InputText>
    </div>
</EditForm>